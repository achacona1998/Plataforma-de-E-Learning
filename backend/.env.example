# ==============================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# ==============================================
# Copia este archivo como .env y configura los valores apropiados

# ==============================================
# CONFIGURACIÓN DEL SERVIDOR
# ==============================================
PORT=5000
NODE_ENV=production
API_PREFIX=/api

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==============================================
# Para desarrollo local
MONGODB_URI=mongodb://localhost:27017/elearning-platform

# Para producción (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/elearning-platform?retryWrites=true&w=majority

# ==============================================
# CONFIGURACIÓN DE AUTENTICACIÓN JWT
# ==============================================
# Genera una clave secreta fuerte para producción
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# CONFIGURACIÓN DE CORS
# ==============================================
# Para desarrollo
CORS_ORIGIN=http://localhost:3000

# Para producción (múltiples dominios separados por coma)
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# CONFIGURACIÓN DE STRIPE (PAGOS)
# ==============================================
# Claves de Stripe (usar claves de test para desarrollo)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Para producción usar claves live
# STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
# STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ==============================================
# CONFIGURACIÓN DE EMAIL
# ==============================================
# Configuración SMTP para envío de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email del remitente
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=EduPlatform

# ==============================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# ==============================================
# Configuración para subida de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
# Tipos de archivo permitidos (separados por coma)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4

# Configuración de AWS S3 (opcional para producción)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# ==============================================
# CONFIGURACIÓN DE SEGURIDAD
# ==============================================
# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutos
RATE_LIMIT_MAX_REQUESTS=100
# máximo 100 requests por ventana

# Configuración de sesiones
SESSION_SECRET=your_session_secret_key_minimum_32_characters

# ==============================================
# CONFIGURACIÓN DE LOGGING
# ==============================================
# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Directorio de logs
LOG_DIR=./logs

# ==============================================
# CONFIGURACIÓN DE CERTIFICADOS
# ==============================================
# URL base para verificación de certificados
CERTIFICATE_VERIFICATION_URL=https://yourdomain.com/verify-certificate

# Configuración de firma digital
CERTIFICATE_PRIVATE_KEY_PATH=./certificates/private.key
CERTIFICATE_PUBLIC_KEY_PATH=./certificates/public.key

# ==============================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# ==============================================
# Para cache y sesiones en producción
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# ==============================================
# CONFIGURACIÓN DE MONITOREO
# ==============================================
# Configuración para servicios de monitoreo
# SENTRY_DSN=your_sentry_dsn_url
# NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# ==============================================
# CONFIGURACIÓN DE DESARROLLO
# ==============================================
# Solo para desarrollo
DEBUG=false
VERBOSE_LOGGING=false

# ==============================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ==============================================
# Configuraciones específicas de producción
TRUST_PROXY=true
SECURE_COOKIES=true
HTTPS_ONLY=true

# Configuración de dominio
DOMAIN=yourdomain.com
SUBDOMAIN=www

# ==============================================
# CONFIGURACIÓN DE BACKUP
# ==============================================
# Configuración para backups automáticos
# BACKUP_SCHEDULE=0 2 * * *
# Diario a las 2 AM
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=your-backup-bucket

# ==============================================
# NOTAS IMPORTANTES
# ==============================================
# 1. NUNCA commitees el archivo .env al repositorio
# 2. Usa claves fuertes y únicas para producción
# 3. Configura HTTPS en producción
# 4. Usa MongoDB Atlas o similar para base de datos en producción
# 5. Configura monitoreo y logging apropiados
# 6. Implementa backups regulares
# 7. Usa variables de entorno del sistema en servicios cloud