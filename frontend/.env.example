# ==============================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO - FRONTEND
# ==============================================
# Copia este archivo como .env y configura los valores apropiados

# ==============================================
# CONFIGURACIÓN DE LA API
# ==============================================
# URL del backend API
# Para desarrollo local
REACT_APP_API_URL=http://localhost:5000/api

# Para producción
# REACT_APP_API_URL=https://api.yourdomain.com/api

# ==============================================
# CONFIGURACIÓN DE STRIPE (FRONTEND)
# ==============================================
# Clave pública de Stripe (segura para el frontend)
# Para desarrollo (usar clave de test)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Para producción (usar clave live)
# REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# ==============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==============================================
# Nombre de la aplicación
REACT_APP_NAME=EduPlatform

# Versión de la aplicación
REACT_APP_VERSION=1.0.0

# URL base de la aplicación
# Para desarrollo
REACT_APP_BASE_URL=http://localhost:3000

# Para producción
# REACT_APP_BASE_URL=https://yourdomain.com

# ==============================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ==============================================
# Tiempo de expiración del token en localStorage (en milisegundos)
REACT_APP_TOKEN_EXPIRY=86400000
# 24 horas

# Configuración de refresh token
REACT_APP_REFRESH_TOKEN_EXPIRY=604800000
# 7 días

# ==============================================
# CONFIGURACIÓN DE ARCHIVOS
# ==============================================
# Tamaño máximo de archivo para subida (en bytes)
REACT_APP_MAX_FILE_SIZE=10485760
# 10MB

# Tipos de archivo permitidos para subida
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4

# ==============================================
# CONFIGURACIÓN DE PAGINACIÓN
# ==============================================
# Número de elementos por página por defecto
REACT_APP_DEFAULT_PAGE_SIZE=10

# Número máximo de elementos por página
REACT_APP_MAX_PAGE_SIZE=100

# ==============================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ==============================================
# Tiempo de duración de las notificaciones toast (en milisegundos)
REACT_APP_TOAST_DURATION=5000
# 5 segundos

# Posición de las notificaciones
REACT_APP_TOAST_POSITION=top-right

# ==============================================
# CONFIGURACIÓN DE ANALYTICS
# ==============================================
# Google Analytics ID (opcional)
# REACT_APP_GA_TRACKING_ID=GA_MEASUREMENT_ID

# Google Tag Manager ID (opcional)
# REACT_APP_GTM_ID=GTM-XXXXXXX

# ==============================================
# CONFIGURACIÓN DE MAPAS
# ==============================================
# Google Maps API Key (si se usa)
# REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==============================================
# CONFIGURACIÓN DE REDES SOCIALES
# ==============================================
# URLs de redes sociales para el footer
REACT_APP_FACEBOOK_URL=https://facebook.com/yourpage
REACT_APP_TWITTER_URL=https://twitter.com/yourhandle
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/yourcompany
REACT_APP_INSTAGRAM_URL=https://instagram.com/yourhandle

# ==============================================
# CONFIGURACIÓN DE SOPORTE
# ==============================================
# Email de soporte
REACT_APP_SUPPORT_EMAIL=support@yourdomain.com

# Teléfono de soporte
REACT_APP_SUPPORT_PHONE=+1-234-567-8900

# URL de documentación
REACT_APP_DOCS_URL=https://docs.yourdomain.com

# ==============================================
# CONFIGURACIÓN DE DESARROLLO
# ==============================================
# Habilitar modo debug (solo para desarrollo)
REACT_APP_DEBUG=false

# Habilitar logs detallados
REACT_APP_VERBOSE_LOGGING=false

# Deshabilitar warnings de React en producción
GENERATE_SOURCEMAP=false

# ==============================================
# CONFIGURACIÓN DE BUILD
# ==============================================
# Configuración para el build de producción
BUILD_PATH=build
PUBLIC_URL=/

# Configuración de chunk splitting
REACT_APP_ENABLE_CODE_SPLITTING=true

# ==============================================
# CONFIGURACIÓN DE PWA
# ==============================================
# Habilitar Service Worker
REACT_APP_ENABLE_SW=true

# Configuración de manifest
REACT_APP_MANIFEST_NAME=EduPlatform
REACT_APP_MANIFEST_SHORT_NAME=EduPlatform
REACT_APP_MANIFEST_DESCRIPTION=Plataforma de E-Learning
REACT_APP_MANIFEST_THEME_COLOR=#3B82F6
REACT_APP_MANIFEST_BACKGROUND_COLOR=#FFFFFF

# ==============================================
# CONFIGURACIÓN DE SEGURIDAD
# ==============================================
# Content Security Policy (CSP)
REACT_APP_CSP_ENABLED=true

# Configuración de HTTPS
HTTPS=false
# Cambiar a true en producción

# ==============================================
# CONFIGURACIÓN DE CERTIFICADOS
# ==============================================
# URL base para verificación de certificados
REACT_APP_CERTIFICATE_VERIFICATION_URL=https://yourdomain.com/verify-certificate

# ==============================================
# CONFIGURACIÓN DE VIDEO
# ==============================================
# Configuración para reproductor de video
REACT_APP_VIDEO_PLAYER_THEME=dark
REACT_APP_VIDEO_AUTOPLAY=false
REACT_APP_VIDEO_CONTROLS=true

# ==============================================
# CONFIGURACIÓN DE IDIOMA
# ==============================================
# Idioma por defecto
REACT_APP_DEFAULT_LANGUAGE=es

# Idiomas soportados (separados por coma)
REACT_APP_SUPPORTED_LANGUAGES=es,en

# ==============================================
# NOTAS IMPORTANTES
# ==============================================
# 1. NUNCA commitees el archivo .env al repositorio
# 2. Solo las variables que empiecen con REACT_APP_ estarán disponibles en el frontend
# 3. Las variables de entorno se embeben en el build, no son secretas
# 4. Para secretos del frontend, usa configuración del servidor
# 5. Reinicia el servidor de desarrollo después de cambiar variables
# 6. En producción, configura estas variables en tu servicio de hosting
# 7. Usa HTTPS en producción para mayor seguridad